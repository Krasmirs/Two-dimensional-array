#include<iostream>	
#include<ctime>
using namespace std;



int main() {
	srand(time(NULL));
	setlocale(LC_ALL, "Rusian");
	int rows = 20, cols = 10;
	
	int** arr = new int*[rows];
	for (int i = 0; i < rows; i++)
	{
		arr[i] = new int[cols];
	}
	for (int i = 0; i < rows;++i)
	{
		for (int d = 0; d < cols; )	// The loop generates a random number that is not yet in the array
		{

			bool proverka = false;
			int randnum = rand() % 200;
			for (int j = 0; j < d; j++)  //The loop checks if there is a generated number in the already written array j < i
			{
				if (randnum == j) {
					proverka = true;
					break;
				}
				

			}
			if (!proverka)       //If the number is unique, write to the array
			{
				arr[i][d] = randnum;
				d++;
			}
			
		}

	}
	for (int i = 0; i < rows; i++)  //The loop prints the array data to the console
	{
		for (int j = 0; j < cols; j++)
		{
			cout << arr[i][j] << "\t";
		}
		cout << endl;
	}
	int minNum = arr[0][0];
	for (int i = 0; i <rows ; i++)
	{
		for (int j = 0; j < cols; j++)
		{
			if (arr[i][j]< minNum)
			{
				minNum = arr[i][j];
			}
		}
	}
	cout << " Find the smallest number in the array " << minNum << endl;
	for (int i = 0; i < rows; i++)
	{
		delete[] arr[i];
	}
	delete[] arr;
}
